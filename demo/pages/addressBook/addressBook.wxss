/* pages/addressBook/addressBook.wxss */

.title {
    width: 100vh;
    height: 30rpx;
    background: #cccc;
    padding-left:20rpx;
    font-size: 16rpx;
    line-height: 30rpx;
}

.items {
    display: flex;
    width: 100vh;
    height: 64rpx;
    margin-left: 20rpx;
    align-items: center;

}

.ava_img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 2rpx;
}

.aname {
    width: 100vw;
    margin-left: 20rpx;
    border-bottom: 1px solid #cccc;
    padding-bottom: 22rpx;
    padding-top: 22rpx;
    font-size: 21rpx;
    overflow: hidden;
}

/* 侧边栏 */
.sidebar {
    position: absolute;
    right: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
    justify-content: center;
    z-index: 999;
}

.sidebarItem {
    display: flex;
    width: 30rpx;
    height: 30rpx;
    font-size: 20rpx;
    border-radius: 50%;
    margin-top: 10rpx;
}

.letter {
    width: 30rpx;
    height: 30rpx;
    text-align: center;
    line-height: 30rpx;
}

.view {
    height: 100vh;
}

.active {
    border-radius: 50%;
    color: white;
    background-color: green;
}